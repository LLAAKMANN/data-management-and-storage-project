CREATE VIEW Invoice_Details_View
 AS
 SELECT p.product_Name as 'Description', p.Product_Price as 'Unit Cost',  oi.quantity as 'quantity', (p.Product_Price*oi.quantity) as 'Amount'
 From product as p
 join SKU as s
 ON p.product_ID = s.product_ID
 join order_item as oi
 ON s.sku_ID = oi.sku_id
 
 
 
